{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx"
  },
  "include": [
    "src//*.ts",
    "src//*.tsx",
    "src",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
